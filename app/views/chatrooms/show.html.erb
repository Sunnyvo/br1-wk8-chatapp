<div class="column is-one-third">
  <h1 class="title">
    <%= @chatroom.topic %>
  </h1>

  <div class="panel chat-messages">
    <div class="panel-heading"><%= @chatroom.topic %></div>
    <%= render @chatroom.messages %>
  </div>

  <%= form_for [@chatroom, @message] do |f| %>
    <div class="field is-grouped">
      <div class="control is-expanded">
        <%= f.text_field :body, class: "input", placeholder: "Type to chat", autofocus: true, autocomplete: false %>
      </div>
      <div class="control">
        <%= f.submit "Enter", class: "button is-primary" %>
      </div>
    </div>
  <% end %>

  <script>setupMessages(<%= @chatroom.id %>)</script>
</div>